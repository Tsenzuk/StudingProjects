extends layout

block content
    .container
        .row
            .col-md-12
                form.panel.panel-default(method="PUT")
                    .panel-heading
                        h3.panel-title="Project " + projects[0].title
                    .panel-body.form-horizontal
                        for project, index in projects
                            .form-group
                                label.col-md-3 Title
                                .col-md-9
                                    input.form-control(value=project.title)
                            .form-group
                                label.col-md-3 Description
                                .col-md-9
                                    textarea.form-control=project.description
                            .form-group
                                label.col-md-3 Start Date
                                .col-md-9
                                    input.form-control(value=project.dateStart.toISOString().split("T")[0], type="date")
                            .form-group
                                label.col-md-3 Finish Date
                                .col-md-9
                                    input.form-control(value=project.dateFinish.toISOString().split("T")[0], type="date")
                    .panel-footer
                        button.btn.btn-success(type="submit")
                            i.glyphicon.glyphicon-ok
                            |  OK
                        |  
                        button.btn.btn-danger(onclick="window.location.reload()")
                            i.glyphicon.glyphicon-remove
                            | Cancel